---
const {
  title,
  type,
  desc = [],
  tech = [],  
  media = [],
  highlights = [],
  links = []
} = Astro.props;

import ProjectGallery from "./ProjectGallery.astro";
---

<div class="single-item">

  <h3>{title}</h3>
  {type && <p class="project-type">{type}</p>}

  <ProjectGallery media={media} />

  <div class="project-desc project-desc-list w-richtext">
    <ul>
      {desc.map(d => <li>{d}</li>)}
    </ul>
  </div>

  <div class="mini-label-white">Technologies & tools</div>
  <div class="chips-container">
    {tech.map(t => <div class="single-chip">{t}</div>)}
  </div>

  {highlights.length > 0 && (
  <>
    <div class="mini-label-white">Highlights</div>
    <div class="project-highlights-card">
      <ul class="project-highlights">
        {highlights.map(h => <li> {h}</li>)}
      </ul>
    </div>
  </>
  )}

  {links.length > 0 && (
    <>
      <div class="mini-label-white">Links</div>
      <div class="project-links">
        {links.map((link) => (
          <a class="link-chip" href={link.url} target="_blank" rel="noopener noreferrer">
            {link.label}
          </a>
        ))}
      </div>
    </>
  )}
</div>