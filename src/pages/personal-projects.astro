---
import Header from '../components/Header.astro';
import Project from '../components/Project.astro';
import Sidebar from '../components/Sidebar.astro';
import ProjectGallery from '../components/ProjectGallery.astro';

const projects = [
  {
    media: [
      
      { type: 'image', src: '/assets/media/unfound/portada.jpeg' },
      { type: 'video', src: '/assets/media/unfound/Trailer.mp4' },
      { type: 'video', src: '/assets/media/unfound/Gameplay.mp4' }
    ],
    title: "Unf0und_VR - Horror VR Experience",
    type: "Virtual Reality Horror Game",
    desc: [
      "Developed an immersive VR horror experience using Unity and C#.",
      "Implemented player interactions, environment triggers, and event systems.",
      "Integrated Oculus SDK and optimized performance for standalone headsets.",
      "Creation of the gun mechanics; realistic shells, full gun movement, bullet marks.",
      "Target creation; random movement, scoring system, physics, screamers."
    ],
    highlights: ["Finalist at FPemprèn 14th Edition."],
    tech: ["Unity", "C#", "Visual Studio 2022", "VR SDK (Oculus)", "Git"],
    links: [
    { label: "Trailer", url: "https://youtu.be/YLgMwV56N9U" }
  ]},
  {
    media: [
      { type: 'video', src: '/assets/media/PlatformVVV/GameplayVVV.mp4' }
    ],
    title: "Platform VVV",
    type: "2D Platformer",
    desc: [
      "Developed movement, camera control, and level logic using Unity.",
      "Designed modular scripts for physics interactions and gameplay systems.",
      "Developed enemies behaviour and obstacles.",
      "Implemented a fruit system (COINS) for the final screen had open."
    ],
    tech: ["Unity", "C#", "Visual Studio 2022", "Git"],
    links: [
      { label: "Download Game", url: "https://drive.google.com/drive/u/5/folders/18yH1OBOTZFmr3YfgTZ9AXJ2Y35BuDAET?usp=sharing" },
      { label: "Gameplay", url: "https://drive.google.com/file/d/1sFwbkx-BeJ8AADU9gG4b_rz6EbSSosPN/view?usp=sharing"}

    ]},
  {
    media: [
      { type: 'video', src: '/assets/media/Demo/DemoRaul.mp4' },
      { type: 'image', src: '/assets/media/Demo/Character.png'}
    ],
    title: "WebAssetHub",
    type: "Virtual Reality Horror Game",
    desc: [
      "Created a web scraper tool that monitors digital assets across multiple platforms and offers them at competitive prices",
      "Sold over 700 items"
    ],
    // media: [
    //   { type: 'video', src: '/assets/Demo/DemoRaul.mp4' },
    //   { type: 'image', src: '/assets/Demo/Character.png'}
    // ],
    tech: ["Python", "Selenium"],
    links: [
      { label: "Download Demo", url: '/assets/media/Demo/DemoBuild.zip' }
    ]
    
  }
];
---

<!DOCTYPE html>
<html>
  <Header title="Personal Projects | Raul Cano Portolés" />
  <body>
    <div class="content">
      <Sidebar selectedItem="personal-projects" />
      <nav class="main">
        <div class="container">
          <div class="back-nav-container">
            <a href="/" class="back-nav-button w-inline-block">
              <img src="/assets/back.svg" loading="lazy" alt="" class="back-nav-img" />
              <div>Back</div>
            </a>
          </div>

          <div class="content-container">
            <h1>Personal Projects</h1>
            <section class="items-container">
              <div class="resouce-items">
                {projects.map(project => (
                  <div class="project-wrapper">
                    <ProjectGallery media={project.media} />
                    <Project
                        title={project.title} 
                        type={project.type}
                        desc={project.desc}
                        tech={project.tech}
                        highlights={project.highlights}
                        links={project.links}
                      />
                  </div>
                ))}
              </div>
            </section>
          </div>
        </div>
      </nav>
    </div>
  </body>
</html>

