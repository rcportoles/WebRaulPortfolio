---
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";
import "../components/experience-background.css";
---

<!DOCTYPE html>
<html lang="en">
  <Header title="Experience Background | Raul Cano Portolés" />
  <body>
    <div class="content">
      <!-- Sidebar integrado correctamente -->
      <Sidebar selectedItem="experience" />

      <main class="main">
